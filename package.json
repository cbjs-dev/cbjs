{
  "name": "@cbjsdev/monorepo",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.0.6",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "lerna run --stream build --scope @cbjsdev/*",
    "dev": "lerna run --parallel dev --scope @cbjsdev/*",
    "lint:check": "eslint --quiet packages tests",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "vitest --run",
    "prepare": "husky",
    "clearDatabase": "pnpm -r --filter='./tests/scripts' run clear"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-v8": "3.0.5",
    "@vitest/runner": "3.0.5",
    "@vitest/ui": "3.0.5",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsdoc": "48.0.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vitest": "^0.3.9",
    "glob": "^10.3.10",
    "husky": "^9.0.10",
    "lerna": "^8.1.2",
    "patch-package": "^8.0.0",
    "pino": "^8.21.0",
    "prettier": "3.2.5",
    "tsup": "^8.0.1",
    "typescript": "5.4.5",
    "vite": "^6.0.11",
    "vitest": "3.0.5"
  }
}
