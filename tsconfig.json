{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
  },
}
